{
  "name": "citu-course-builder",
  "private": true,
  "type": "module",
  "overrides": {
    "minimatch": "^10.2.1"
  },
  "scripts": {
    "dev": "bun run --cwd course-scheduler-astro dev",
    "build": "bun run --cwd course-scheduler-astro build",
    "preview": "bun run --cwd course-scheduler-astro preview",
    "typecheck": "bun run --cwd course-scheduler-astro typecheck",
    "test": "bun run --cwd course-scheduler-astro test",
    "test:watch": "bun run --cwd course-scheduler-astro test:watch",
    "test:e2e": "bun run --cwd course-scheduler-astro test:e2e",
    "lint": "eslint --max-warnings 0 .",
    "lint:fix": "eslint --fix --max-warnings 0 .",
    "lint-staged": "lint-staged",
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.astro": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^10.0.0",
    "eslint-plugin-astro": "^1.6.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  }
}
