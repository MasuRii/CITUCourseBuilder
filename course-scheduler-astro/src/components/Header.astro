---
/**
 * Header.astro
 *
 * Main header component for the CITU Course Builder application.
 * Displays the logo, title, and theme toggle controls.
 *
 * Features:
 * - Theme-aware logo (light logo for light theme, dark logo for dark theme)
 * - Responsive layout for mobile and desktop
 * - Integrated theme toggle functionality
 *
 * @see docs/architecture/REACT_ISLANDS_HYDRATION.md for hydration strategy
 */

import ThemeToggle from './ThemeToggle';
---

<header class="app-header">
  <div class="container-main">
    <div class="header-content">
      <!-- Logo and Title -->
      <div class="header-brand">
        <!-- Theme-aware logo using CSS visibility -->
        <div class="logo-container">
          <img
            src="/logo_icon_light.svg"
            alt="CIT-U Logo"
            class="logo logo-light"
            width="40"
            height="40"
          />
          <img
            src="/logo_icon_dark.svg"
            alt="CIT-U Logo"
            class="logo logo-dark"
            width="40"
            height="40"
          />
        </div>
        <h1 class="header-title">CIT-U Course Builder</h1>
      </div>

      <!-- Theme Toggle Controls -->
      <ThemeToggle client:load />
    </div>
  </div>
</header>

<style>
  .app-header {
    background-color: var(--header-bg);
    padding: var(--space-4) 0;
    margin-bottom: var(--space-6);
    box-shadow: var(--box-shadow);
  }

  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: var(--space-4);
  }

  .header-brand {
    display: flex;
    align-items: center;
    gap: var(--space-4);
  }

  .logo-container {
    position: relative;
    width: 40px;
    height: 40px;
  }

  .logo {
    width: 40px;
    height: 40px;
    border-radius: var(--border-radius-lg);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: transform var(--transition-fast);
    position: absolute;
    top: 0;
    left: 0;
  }

  .logo:hover {
    transform: scale(1.05);
  }

  /* Show light logo in light theme */
  :global([data-theme='light']) .logo-light {
    visibility: visible;
    opacity: 1;
  }

  :global([data-theme='light']) .logo-dark {
    visibility: hidden;
    opacity: 0;
  }

  /* Show dark logo in dark theme (default) */
  :global([data-theme='dark']) .logo-light {
    visibility: hidden;
    opacity: 0;
  }

  :global([data-theme='dark']) .logo-dark {
    visibility: visible;
    opacity: 1;
  }

  .header-title {
    margin: 0;
    font-size: var(--text-xl);
    font-weight: var(--font-weight-bold);
    color: var(--header-text);
    line-height: 1.2;
  }

  /* Responsive adjustments */
  @media (max-width: 480px) {
    .header-content {
      flex-direction: column;
      align-items: flex-start;
    }

    .header-title {
      font-size: var(--text-lg);
    }
  }

  @media (max-width: 360px) {
    .header-brand {
      gap: var(--space-2);
    }

    .logo-container {
      width: 32px;
      height: 32px;
    }

    .logo {
      width: 32px;
      height: 32px;
    }

    .header-title {
      font-size: var(--text-base);
    }
  }
</style>
